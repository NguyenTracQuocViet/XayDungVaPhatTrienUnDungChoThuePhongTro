<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".CapNhat.SuaPhong">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_top"
        android:gravity="center"
        android:padding="20dp"
        android:text="CẬP NHẬT THÔNG TIN PHÒNG"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sophongsp"
        android:layout_width="352dp"
        android:layout_height="73dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/_center"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/nha"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.302"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="sophong"
        android:gravity="center"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="343dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.636"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/giaphongsp"
            android:layout_width="325dp"
            android:layout_height="69dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="33dp"
            android:ems="10"
            android:hint="Giá Phòng(vnđ)"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            tools:ignore="TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="347dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="296dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/dientichsp"
            android:layout_width="325dp"
            android:layout_height="69dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="33dp"
            android:ems="10"
            android:hint="Diện Tích(m2)"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            tools:ignore="TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btncapnhat"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/orange"
        android:text="CẬP NHẬT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnhuy"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="614dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/orange"
        android:text="HỦY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>