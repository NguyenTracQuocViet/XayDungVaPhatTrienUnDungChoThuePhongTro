<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_green"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/khachcard"
        android:layout_width="355dp"
        android:layout_height="238dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp"
        app:layout_constraintHorizontal_weight="1"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="354dp"
            android:layout_height="241dp">

            <TextView
                android:id="@+id/lphonghoadon"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="phòng"
                android:textColor="@color/red"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/lsodienhoadon"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="153dp"
                android:drawableStart="@drawable/electric"
                android:gravity="center"
                android:hint="số dien"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/lsonuochoadon"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="155dp"
                android:drawableStart="@drawable/water"
                android:gravity="center"
                android:hint="số nuoc"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/lnguoithuehoadon"
                android:layout_width="312dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="54dp"
                android:drawableStart="@drawable/user_icon_svgrepo_com"
                android:gravity="center"
                android:hint="người thuê"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/lngaytaohoadon"
                android:layout_width="303dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="107dp"
                android:drawableStart="@drawable/calendar"
                android:gravity="center"
                android:hint="ngày tao hoa don"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/ltongtienhoadon"
                android:layout_width="297dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="31dp"
                android:drawableStart="@drawable/money"
                android:gravity="center"
                android:hint="tong tien"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

